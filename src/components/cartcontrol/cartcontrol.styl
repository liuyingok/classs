.cartcontrol
  font-size: 0
  .cart-decrease
    display: inline-block
    padding: 6px
    transition: all 0.4s linear 0s
    &.move-transition
      opacity: 1
      transform: translate3d(0px, 0px, 0px)
      .inner
        color: #00a0dc
        display: inline-block
        font-size: 24px
        line-height: 24px
        transform: rotate(0deg)
        transition: all 0.4s linear 0s
    &.move-enter,&.move-leave
      opacity: 0
      transform: translate3d(24px, 0px, 0px)
      .inner
        transform: rotate(180deg)
  .cart-count
    display: inline-block
    line-height: 24px
    padding-top: 6px
    text-align: center
    vertical-align: top
    width: 12px
    color: #93999f
    font-size: 12px
  .cart-add
    color: #00a0dc
    display: inline-block
    font-size: 24px
    line-height: 24px
    padding: 6px
